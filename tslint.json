{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "no-unused-expression": false,
        "no-console": false,
        "max-line-length": {
            "options": [
                120
            ]
        },
        "member-ordering": false,
        "no-consecutive-blank-lines": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "quotemark": [
            true,
            "double"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "curly": [
            true,
            "ignore-same-line"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format"
        ]
	}
}